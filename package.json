{
  "name": "kolay-kredi",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "description": "Türkiye'nin en kapsamlı kredi ve finansal ürün karşılaştırma platformu",
  "homepage": "https://netroya.github.io/kolay-kredi/",
  "repository": {
    "type": "git",
    "url": "https://github.com/netroya/kolay-kredi.git"
  },
  "keywords": [
    "kredi",
    "banka",
    "finansal",
    "karşılaştırma",
    "faiz",
    "hesaplama",
    "turkey",
    "turkish"
  ],
  "author": "Kolay Kredi Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rimraf dist",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "validate-logos": "node scripts/validate-logos.js",
    "logo-qa": "node scripts/logo-qa.mjs",
    "logo-optimize": "npm run logo-qa"
  },
  "dependencies": {
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.20.1",
    "terser": "^5.43.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "svgo": "^3.0.2",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
